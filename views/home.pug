extends layouts/base

block content
    main.flex-grow-1

        if warning && warning.length > 0
            each warn in warning
                .alert.alert-warning.text-center #{warn}

        h1.text-center.mt-2 ¡Bienvenido a la casa de las salsas!

        .container
            .mt-4
                p La Casa de las Salsas es una tienda especializada en la venta de productos hechos por papas acompañados con salsas de diferentes sabores,olores y texturas.
        .container-fluid.my-3
            .row.p-3.bg-secondary
                .col-12.col-md-6
                    img.img-fluid(src='/assets/images/PapaTarasca.jpeg')
                .col-12.col-md-6.d-flex.justify-content-center.align-items-center.flex-column.mt-2.mt-md-0
                    p.text-light.text-center.text-md-start ¡Empieza a realizar tu pedido ya!
                    .d-grid.gap-2.w-100.d-md-flex.justify-content-md-center
                        a.btn.btn-primary(href='/iniciar-sesion') Inicia tu pedido

        .container
            h2.text-center ¿Dónde nos ubicamos?
            p.text-center Emiliano Zapata #373 Colonia El Llanito Purepero
            .mt-3
                iframe.w-100(src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3751.454128673596!2d-102.00731288508584!3d19.90525898661757!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x842dd4c73dce399f%3A0xacc9f45da613d78!2sCalle%20Emiliano%20Zapata%20373%2C%20Barrio%20del%20Llanito%2C%2058760%20Pur%C3%A9pero%20de%20Ech%C3%A1iz%2C%20Mich.!5e0!3m2!1ses!2smx!4v1633316794211!5m2!1ses!2smx' height='450' style='border:0;' allowfullscreen='' loading='lazy')


block scripts
